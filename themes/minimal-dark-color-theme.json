{
  "name": "Minimal Dark",
  "type": "dark",
  "colors": {
    // Fondo del editor
    "editor.background": "#2E3440",
    "editor.foreground": "#D8DEE9",
    
    // Barra lateral (Sidebar)
    "sideBar.background": "#2E3440",  // Fondo oscuro suave
    "sideBar.foreground": "#D8DEE9",  // Texto claro, legible
    "sideBarTitle.foreground": "#ECEFF4",
    "sideBarSectionHeader.background": "#4C566A",
    "sideBarSectionHeader.foreground": "#D8DEE9",

    // Explorer (No folder open)
    "editorGroup.emptyBackground": "#2E3440",  // Fondo oscuro del explorer sin carpetas abiertas
    "list.emptyForeground": "#D8DEE9",  // Texto en el explorer cuando no hay carpetas

    // Timeline
    "timeline.background": "#2E3440",  // Fondo del timeline
    "timeline.foreground": "#D8DEE9",  // Texto claro en el timeline
    
    // Barra horizontal (de archivos abiertos)
    "tab.activeBackground": "#2E3440",  // Fondo de la pestaña activa igual al sidebar
    "tab.inactiveBackground": "#3B4252",  // Fondo de las pestañas inactivas ligeramente más claro
    "tab.activeForeground": "#D8DEE9",  // Texto claro en la pestaña activa
    "tab.inactiveForeground": "#4C566A",  // Texto gris suave en pestañas inactivas
    "tab.border": "#2E3440",  // Sin borde visible para un look minimalista
    "editorGroupHeader.tabsBackground": "#2E3440",  // Fondo de la barra de pestañas
    
    // Barra de estado (abajo)
    "statusBar.background": "#2E3440",  // Fondo oscuro igual al editor
    "statusBar.foreground": "#D8DEE9",  // Texto claro
    "statusBar.noFolderBackground": "#2E3440",
    "statusBar.noFolderForeground": "#D8DEE9",
    "statusBar.border": "#4C566A",
    
    // Terminal
    "terminal.background": "#2E3440",   // Terminal con el mismo fondo que el editor
    "terminal.foreground": "#D8DEE9",   // Texto claro
    "terminalCursor.background": "#D8DEE9",
    "terminalCursor.foreground": "#D8DEE9",
    
    // Barra de pestañas (Activity Bar)
    "activityBar.background": "#2E3440",  // Fondo oscuro igual al editor
    "activityBar.foreground": "#ECEFF4",  // Texto claro
    "activityBarBadge.background": "#007ACC",  // Azul fuerte para destacar los badges
    "activityBarBadge.foreground": "#FFFFFF",
    
    // Otros elementos
    "titleBar.activeBackground": "#2E3440",   // Fondo de la barra de título consistente
    "titleBar.activeForeground": "#D8DEE9",   // Texto claro
    "titleBar.inactiveBackground": "#2E3440",
    "titleBar.inactiveForeground": "#4C566A",
    
    "editorLineNumber.foreground": "#4C566A",  // Números de línea en gris suave
    "editor.selectionBackground": "#4C566A",  // Fondo de selección gris suave
    "editor.inactiveSelectionBackground": "#3B4252",  // Selección inactiva
    "editorCursor.foreground": "#D8DEE9",  // Cursor claro
    "button.background": "#81A1C1",  // Botones con color azul suave
    "button.foreground": "#ECEFF4",  // Texto claro en botones
    "input.background": "#434C5E",  // Fondo de los inputs
    "input.foreground": "#D8DEE9"  // Texto claro en inputs
  },
  "tokenColors": [
    {
      "scope": ["comment"],
      "settings": {
        "foreground": "#4C566A",  // Comentarios en gris suave
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["keyword"],
      "settings": {
        "foreground": "#81A1C1",  // Azul relajante para las palabras clave
        "fontStyle": "bold"
      }
    },
    {
      "scope": ["string"],
      "settings": {
        "foreground": "#A3BE8C"  // Verde suave para cadenas
      }
    },
    {
      "scope": ["variable"],
      "settings": {
        "foreground": "#BF616A"  // Rojo suave para variables
      }
    },
    {
      "scope": ["function"],
      "settings": {
        "foreground": "#88C0D0"  // Turquesa suave para funciones
      }
    }
  ]
}